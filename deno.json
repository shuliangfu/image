{
  "name": "@dreamer/image",
  "version": "1.0.1",
  "license": "Apache-2.0",
  "compilerOptions": {
    "lib": [
      "deno.window",
      "dom"
    ]
  },
  "exports": {
    ".": "./src/mod.ts",
    "./client": "./src/client/mod.ts"
  },
  "publish": {
    "include": [
      "src/mod.ts",
      "src/client/mod.ts",
      "src/i18n.ts",
      "src/locales/*.json",
      "LICENSE",
      "NOTICE",
      "README.md"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/test/**",
      "**/tests/**"
    ]
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "imports": {
    "@dreamer/i18n": "jsr:@dreamer/i18n@^1.0.1",
    "@dreamer/test": "jsr:@dreamer/test@^1.0.8",
    "@dreamer/runtime-adapter": "jsr:@dreamer/runtime-adapter@^1.0.13"
  }
}
